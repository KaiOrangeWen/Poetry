<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc"
    tools:context="com.example.severn.poetry.LoginActivity">


    <RelativeLayout
        android:id="@+id/biaoti"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#3C8DC4">
        <TextView
            android:text="登录"
            android:id="@+id/text_title"
            android:textSize="21sp"
            android:textColor="#fff"
            android:gravity="center"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button_mereturn"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/left_ccc"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:visibility="visible" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_marginTop="75dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            >
            <com.example.severn.util.CircleImageView
                android:id="@+id/userPhoto"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/touxiang"
                android:layout_centerHorizontal="true"
                />
            <!--<LinearLayout-->
            <!--android:layout_width="75dp"-->
            <!--android:layout_height="75dp"-->
            <!---->
            <!--android:background="@drawable/txyuanjiao"-->
            <!--&gt;-->
            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->
            <!--</LinearLayout>-->



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/useracc"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/userPhoto"
            android:layout_marginTop="10dp"
            android:background="#fff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:text=" 账号 :"
                />
            <EditText
                android:id="@+id/uselogin"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="44dp"
                android:background="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/useracc"
            android:layout_marginTop="10dp"
            android:background="#fff"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:text=" 密码 :"
                />
            <EditText
                android:id="@+id/passlogin"
                android:layout_width="wrap_content"
                android:inputType="textPassword"
                android:layout_weight="2"
                android:layout_height="44dp"
                android:background="@null"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="登录"
                android:textColor="#fff"
                android:textSize="16dp"
                android:background="@drawable/button_bg"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/userPhoto"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/register_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即注册"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center_horizontal"
                android:textColor="#3C8DC4"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/zhaohuimima"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:text="找回密码？"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_weight="1"
                android:textColor="#3C8DC4"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
